{
    "name": "vicentimartins/phpomodoro",
    "description": "Pomodoro Timer in a cli app",
    "type": "project",
    "license": "GPL3",
    "authors": [
        {
            "name": "vicentimartins",
            "email": "geo.martins7@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "PHPomodoro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit --colors=always"
    }
}
